#if(v==7)
void czas(int x, int y)
{
	cout << "Czas: " << x << ":" << y << endl;

}

int main()
{
	int hour, minute;
	cout << "Podaj liczbe godzin:";
	cin >> hour;
	cout << "\nPodaj liczbe minut:";
	cin >> minute;

	czas(hour, minute);
	return 0;
}
#endif
