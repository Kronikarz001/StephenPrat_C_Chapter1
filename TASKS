{
	y = y * 1.8 + 32.0;
	return y;
}

int main() {
	double x = 0.0;

	cout << "Podaj temperature w stopniach Celsjusza: ";
	cin >> x;

	cout << "\nOto temperatura w Farenheitach: " << C_do_F(x) << endl;
	return 0;
}
